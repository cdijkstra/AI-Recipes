@page "/counter"

<PageTitle>Counter</PageTitle>

<div class="bg-gray-100 p-4 rounded-lg shadow-md">
    <h1 class="text-6xl font-bold">Counter</h1>
    <p class="text-lg mt-2">Current count: @currentCount</p>

    <button class="bg-blue-500 text-white font-semibold px-4 py-2 rounded-full mt-4 hover:bg-blue-600 focus:outline-none" @onclick="IncrementCount">Click me</button>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
